{
  "name": "titus-backend",
  "version": "1.0.0-alpha.1",
  "private": true,
  "description": "The backend for the Titus project using fastify",
  "main": "index.js",
  "scripts": {
    "create:env": "node -r fs -e \"fs.copyFileSync('.env.sample', '.env', fs.constants.COPYFILE_EXCL)\"",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:staged": "lint-staged",
    "start": "nodemon --config .nodemonrc .",
    "test": "jest --config .jest.json --coverage",
    "test:watch": "jest --config .jest.json --watch --verbose",
    "test:related": "jest --config .jest.json --onlyChanged"
  },
  "dependencies": {
    "axios": "^0.19.2",
    "dotenv": "^8.2.0",
    "dotenv-expand": "^5.1.0",
    "env-schema": "^1.0.0",
    "fastify": "^2.15.1",
    "fastify-auth": "^0.7.2",
    "fastify-autoload": "^1.2.2",
    "fastify-cors": "^3.0.3",
    "fastify-helmet": "^3.0.2",
    "fastify-jwt": "^1.4.0",
    "fastify-plugin": "^1.6.1",
    "fastify-postgres": "^2.0.0",
    "fastify-swagger": "^2.6.0",
    "fastify-url-data": "^2.3.0",
    "fluent-schema": "^1.0.4",
    "jwk-to-pem": "^2.0.4",
    "jwks-rsa": "^1.8.1",
    "jws": "^4.0.0",
    "nodemon": "^2.0.4",
    "pg": "^8.2.1",
    "pg-pool": "^3.2.1",
    "pg-range": "^1.0.1",
    "under-pressure": "^4.0.0"
  },
  "devDependencies": {
    "babel-eslint": "^10.1.0",
    "eslint": "^7.3.1",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jest": "^23.17.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "faker": "^4.1.0",
    "jest": "^26.1.0",
    "jsonwebtoken": "^8.5.1",
    "lint-staged": "^10.2.11",
    "nock": "^12.0.3",
    "prettier": "^2.0.5"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  }
}

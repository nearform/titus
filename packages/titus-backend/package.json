{
  "name": "titus-backend",
  "version": "1.0.0-alpha.1",
  "private": true,
  "description": "The backend for the Titus project",
  "main": "index.js",
  "scripts": {
    "create:env": "node -r fs -e \"fs.copyFileSync('.env.sample', '.env', fs.constants.COPYFILE_EXCL)\"",
    "db:init": "cat tools/initdb/*.sql | psql -1",
    "db:migrate": "node ./tools/migrate build",
    "db:seed": "node ./tools/migrate seed_dev",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "start": "nodemon --config .nodemonrc .",
    "test": "jest --config .jest.json --coverage",
    "test:watch": "jest --config .jest.json --watch --verbose"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "boom": "^7.3.0",
    "dotenv": "^6.2.0",
    "dotenv-expand": "^4.2.0",
    "hapi": "^18.0.1",
    "hapi-auth-jwt2": "^8.3.0",
    "hapi-pino": "^5.2.0",
    "jwks-rsa": "^1.3.0",
    "nodemon": "^1.18.7",
    "pg": "^7.8.0",
    "pg-pool": "^2.0.6",
    "pg-range": "^1.0.1",
    "postgrator": "^3.6.0"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "eslint": "^5.12.1",
    "eslint-config-prettier": "^4.0.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jest": "^22.2.1",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "faker": "^4.1.0",
    "jest": "^24.0.0",
    "nock": "^10.0.6",
    "prettier": "^1.16.2"
  }
}

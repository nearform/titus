{
  "name": "titus-backend",
  "version": "1.0.0-alpha.1",
  "private": true,
  "description": "The backend for the Titus project using fastify",
  "main": "index.js",
  "scripts": {
    "create:env": "node -r fs -e \"fs.copyFileSync('.env.sample', '.env', fs.constants.COPYFILE_EXCL)\"",

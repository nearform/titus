    "env-schema": "^2.0.1",
    "fastify": "^3.9.2",
    "fastify-auth": "^1.0.1",
    "fastify-auth0-verify": "^0.4.2",
    "fastify-autoload": "^3.4.0",
    "fastify-casbin": "^2.0.0",
    "fastify-cors": "^5.1.0",
    "fastify-helmet": "^5.1.0",
    "fastify-plugin": "^3.0.0",
    "fastify-postgres": "^3.3.0",

{
  "name": "titus-backend",
  "version": "1.0.0",
  "private": true,
  "description": "The backend for the Titus project",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "initdb": "cat initdb/*.sql | PGPASSWORD=$POSTGRES_PASSWORD psql -U postgres -1",
    "migrate": "node ./tools/migrate build",
    "dev:seed": "node ./tools/migrate seed_dev",
    "docker:dev:start": "docker-compose -f docker/docker-compose-dev.yml up -d --build",
    "docker:dev:stop": "docker-compose -f docker/docker-compose-dev.yml down",
    "docker:dev:rmi": "docker-compose -f docker/docker-compose-dev.yml down --rmi all",
    "docker:dev:logs": "docker-compose -f docker/docker-compose-dev.yml logs -f",
    "docker:dev:exec": "docker-compose -f docker/docker-compose-dev.yml exec api",
    "docker:dev:migrate": "docker-compose -f docker/docker-compose-dev.yml exec api npm run migrate",
    "docker:dev:seed": "docker-compose -f docker/docker-compose-dev.yml exec api npm run dev:seed",
    "dev:start": "nodemon --config .nodemonrc .",
    "start": "npm run docker:dev:start",
    "stop": "npm run docker:dev:stop",
    "dev:cleandb": "rm -rf pgdata",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "create:env": "node -r fs -e \"fs.copyFileSync('docker/dev.env.sample', 'docker/dev.env', fs.constants.COPYFILE_EXCL)\""
  },
  "dependencies": {
    "@nearform/sql": "^1.0.1",
    "axios": "^0.18.0",
    "camelcase": "^5.0.0",
    "dataloader": "^1.4.0",
    "hapi": "^18.0.0",
    "hapi-auth-jwt2": "^8.3.0",
    "hapi-auth-basic": "^5.0.0",
    "hapi-pino": "^5.2.0",
    "jwks-rsa": "^1.3.0",
    "node-fetch": "^2.3.0",
    "pg": "^7.8.0",
    "pg-pool": "^2.0.6",
    "pg-range": "^1.0.0",
    "postgrator": "^3.6.0",
    "request": "^2.88.0"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "eslint": "^5.12.1",
    "eslint-config-prettier": "^4.0.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-config-standard-react": "^7.0.2",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jest": "^22.2.1",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "jest": "^24.0.0",
    "nodemon": "^1.18.7",
    "prettier": "^1.16.2"
  },
  "jest": {
    "verbose": true,
    "testEnvironment": "node",
    "testRegex": "./test/.*"
  }
}

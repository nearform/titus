{
  "name": "titus-backend",
  "version": "1.0.0-alpha.1",
  "private": true,
  "description": "The backend for the Titus project using fastify",
  "main": "index.js",
  "scripts": {
    "create:env": "node -r fs -e \"fs.copyFileSync('.env.sample', '.env', fs.constants.COPYFILE_EXCL)\"",
    "db:init": "cat tools/initdb/*.sql | psql -1",
    "db:migrate": "node ./tools/migrate build",
    "db:seed": "node ./tools/migrate seed_dev",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:staged": "lint-staged",
    "start": "nodemon --config .nodemonrc .",
    "test": "jest --config .jest.json --coverage",
    "test:watch": "jest --config .jest.json --watch --verbose"
  },
  "dependencies": {
    "axios": "^0.19.0",
    "dotenv": "^6.2.0",
    "dotenv-expand": "^4.2.0",
    "env-schema": "^1.0.0",
    "fastify": "^2.7.0",
    "fastify-auth": "^0.5.0",
    "fastify-autoload": "^1.0.0",
    "fastify-cors": "^2.1.3",
    "fastify-jwt": "^1.0.0",
    "fastify-plugin": "^1.6.0",
    "fastify-postgres": "^2.0.0",
    "fastify-url-data": "^2.3.0",
    "fluent-schema": "^0.7.3",
    "jwk-to-pem": "^2.0.1",
    "jwks-rsa": "^1.3.0",
    "jws": "^3.2.2",
    "nodemon": "^1.18.7",
    "pg": "^7.8.0",
    "pg-pool": "^2.0.6",
    "pg-range": "^1.0.1",
    "postgrator": "^3.6.0",
    "request": "^2.88.0",
    "under-pressure": "^3.1.0"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "eslint": "^5.12.1",
    "eslint-config-prettier": "^4.0.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jest": "^22.2.1",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "faker": "^4.1.0",
    "jest": "^24.0.0",
    "jsonwebtoken": "^8.5.1",
    "lint-staged": "^8.1.4",
    "nock": "^10.0.6",
    "prettier": "^1.16.2"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  }
}

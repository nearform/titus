{
  "name": "titus-kitchen-sink-backend",
  "version": "1.0.0",
  "private": true,
  "description": "The backend for the Titus project",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "initdb": "cat initdb/*.sql | PGPASSWORD=$POSTGRES_PASSWORD psql -U postgres -1",
    "migrate": "node ./tools/migrate build && npx commentami-core-db-migrate",
    "dev:seed": "node ./tools/migrate seed_dev",
    "dev:seed:udaru:init": "udaru-init --host=$PGHOST --database=$POSTGRES_DB --user=$POSTGRES_USER --password=$POSTGRES_PASSWORD",
    "dev:seed:udaru:migrate": "udaru-migrate --host=$PGHOST --database=$POSTGRES_DB --user=$POSTGRES_USER --password=$POSTGRES_PASSWORD --version=max",
    "dev:seed:udaru:seed": "udaru-loadTestData --host=$PGHOST --database=$POSTGRES_DB --user=$POSTGRES_USER --password=$POSTGRES_PASSWORD",
    "dev:seed:udaru": "npm run dev:seed:udaru:init && npm run dev:seed:udaru:migrate && npm run dev:seed:udaru:seed",
    "prod:seed:udaru:init": "udaru-init --host=$PGHOST --database=$POSTGRES_DB --user=$POSTGRES_USER --password=$POSTGRES_PASSWORD",
    "prod:seed:udaru:migrate": "udaru-migrate --host=$PGHOST --database=$POSTGRES_DB --user=$POSTGRES_USER --password=$POSTGRES_PASSWORD --version=max",
    "prod:seed:udaru:seed": "udaru-loadTestData --host=$PGHOST --database=$POSTGRES_DB --user=$POSTGRES_USER --password=$POSTGRES_PASSWORD",
    "prod:seed:udaru": "npm run prod:seed:udaru:init && npm run prod:seed:udaru:migrate && npm run prod:seed:udaru:seed",
    "docker:dev:start": "docker-compose -f docker/docker-compose-dev.yml up -d --build",
    "docker:dev:stop": "docker-compose -f docker/docker-compose-dev.yml down",
    "docker:dev:rmi": "docker-compose -f docker/docker-compose-dev.yml down --rmi all",
    "docker:dev:logs": "docker-compose -f docker/docker-compose-dev.yml logs -f",
    "docker:dev:exec": "docker-compose -f docker/docker-compose-dev.yml exec api",
    "docker:dev:migrate": "docker-compose -f docker/docker-compose-dev.yml exec api npm run migrate",
    "docker:dev:seed": "docker-compose -f docker/docker-compose-dev.yml exec api npm run dev:seed",
    "docker:dev:seed:udaru": "docker-compose -f docker/docker-compose-dev.yml exec api npm run dev:seed:udaru",
    "dev:start": "nodemon --ignore pgdata/ -P 5000 -L .",
    "start": "npm run docker:dev:start",
    "stop": "npm run docker:dev:stop",
    "dev:cleandb": "rm -rf pgdata",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "create:env": "node -r fs -e \"fs.copyFileSync('docker/dev.env.sample', 'docker/dev.env', fs.constants.COPYFILE_EXCL)\""
  },
  "dependencies": {
    "@nearform/commentami-backend-hapi-plugin": "^1.0.5",
    "@nearform/sql": "^1.0.1",
    "@nearform/trail-core": "^1.0.1",
    "@nearform/trail-hapi-plugin": "^1.0.1",
    "@nearform/udaru-hapi-plugin": "^5.2.1",
    "apollo-server-hapi": "^1.3.6",
    "axios": "^0.18.0",
    "camelcase": "^5.0.0",
    "dataloader": "^1.4.0",
    "graphql": "^14.0.0-rc.1",
    "graphql-tools": "^3.0.2",
    "hapi": "^17.5.1",
    "hapi-auth-jwt2": "^8.1.0",
    "hapi-auth-basic": "^5.0.0",
    "hapi-pino": "^4.0.4",
    "jwks-rsa": "^1.3.0",
    "node-fetch": "^2.2.0",
    "pg": "^7.4.3",
    "pg-pool": "^2.0.3",
    "pg-range": "^1.0.0",
    "postgrator": "^3.6.0",
    "request": "^2.88.0"
  },
  "devDependencies": {
    "babel-eslint": "^8.2.3",
    "eslint": "^4.19.1",
    "eslint-config-prettier": "^4.0.0",
    "eslint-config-standard": "^11.0.0",
    "eslint-config-standard-react": "^6.0.0",
    "eslint-plugin-import": "^2.12.0",
    "eslint-plugin-jest": "^21.17.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-prettier": "^2.6.0",
    "eslint-plugin-promise": "^3.8.0",
    "eslint-plugin-standard": "^3.1.0",
    "hapi-swagger": "^9.1.1",
    "inert": "^5.1.0",
    "jest": "^23.1.0",
    "nodemon": "^1.18.7",
    "prettier": "^1.14.2",
    "vision": "^5.3.3"
  },
  "jest": {
    "verbose": true,
    "testEnvironment": "node",
    "testRegex": "./test/.*"
  }
}

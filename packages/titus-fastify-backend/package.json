{
  "name": "titus-kitchen-sink-fastify-backend",
  "version": "0.1.0",
  "private": true,
  "description": "The Fastify backend for the Titus project",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "migrate": "node ./tools/migrate build",
    "dev:seed": "node ./tools/migrate seed_dev",
    "dev:seed:udaru:init": "udaru-init --host='postgres' --database='titus' --user='titus' --password='titus'",
    "dev:seed:udaru:migrate": "udaru-migrate --host='postgres' --database='titus' --user='titus' --password='titus' --version=max",
    "dev:seed:udaru:seed": "udaru-loadTestData --host='postgres' --database='titus' --user='titus' --password='titus'",
    "dev:seed:udaru": "npm run dev:seed:udaru:init && npm run dev:seed:udaru:migrate && npm run dev:seed:udaru:seed",
    "prod:seed:udaru:init": "udaru-init --host='titus-db' --database='titus' --user='titus' --password='titus'",
    "prod:seed:udaru:migrate": "udaru-migrate --host='titus-db' --database='titus' --user='titus' --password='titus' --version=max",
    "prod:seed:udaru:seed": "udaru-loadTestData --host='titus-db' --database='titus' --user='titus' --password='titus'",
    "prod:seed:udaru": "npm run prod:seed:udaru:init && npm run prod:seed:udaru:migrate && npm run prod:seed:udaru:seed",
    "docker:dev:start": "docker-compose -f docker/docker-compose-dev.yml up -d --build",
    "docker:dev:stop": "docker-compose -f docker/docker-compose-dev.yml down",
    "docker:dev:rmi": "docker-compose -f docker/docker-compose-dev.yml down --rmi all",
    "docker:dev:logs": "docker-compose -f docker/docker-compose-dev.yml logs -f",
    "docker:dev:exec": "docker-compose -f docker/docker-compose-dev.yml exec api",
    "docker:dev:migrate": "docker-compose -f docker/docker-compose-dev.yml exec api npm run migrate",
    "docker:dev:seed": "docker-compose -f docker/docker-compose-dev.yml exec api npm run dev:seed",
    "docker:dev:seed:udaru": "docker-compose -f docker/docker-compose-dev.yml exec api npm run dev:seed:udaru",
    "dev:start": "nodemon --ignore pgdata/ -P 5000 -L .",
    "start": "npm run docker:dev:start",
    "stop": "npm run docker:dev:stop",
    "dev:cleandb": "rm -rf pgdata",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write *.js **/*.js"
  },
  "dependencies": {
    "@nearform/sql": "^1.0.1",
    "@nearform/trail-core": "^1.0.1",
    "@nearform/udaru-core": "^5.2.1",
    "axios": "^0.18.0",
    "camelcase": "^5.0.0",
    "dataloader": "^1.4.0",
    "fastify": "^1.12.1",
    "fastify-cors": "^0.1.0",
    "fastify-gql": "^0.5.0",
    "fastify-postgres": "^1.2.1",
    "fastify-swagger": "^0.15.1",
    "graphql": "^14.0.2",
    "graphql-tools": "^3.0.2",
    "http-errors": "^1.7.1",
    "jwks-rsa": "^1.3.0",
    "node-fetch": "^2.2.0",
    "pg": "^7.4.3",
    "pg-pool": "^2.0.3",
    "pg-range": "^1.0.0",
    "postgrator": "^3.6.0",
    "request": "^2.88.0"
  },
  "devDependencies": {
    "babel-eslint": "^8.2.3",
    "eslint": "^4.19.1",
    "eslint-config-standard": "^11.0.0",
    "eslint-config-standard-react": "^6.0.0",
    "eslint-plugin-import": "^2.12.0",
    "eslint-plugin-jest": "^21.17.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-prettier": "^2.6.0",
    "eslint-plugin-promise": "^3.8.0",
    "eslint-plugin-standard": "^3.1.0",
    "jest": "^23.1.0",
    "nodemon": "^1.17.5",
    "prettier": "^1.14.2"
  },
  "jest": {
    "verbose": true,
    "testEnvironment": "node",
    "testRegex": "./test/.*.test.js"
  }
}

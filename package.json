{
  "name": "titus",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "clean:all": "lerna clean",
    "create:env": "lerna run --parallel create:env",
    "build": "lerna run --parallel build",
    "doc:serve": "docsify serve -p 4000 docs",
    "docker:dev:create-volume": "docker volume create --name titus-pg-data -d local",
    "docker:dev:logs": "docker-compose logs -f",
    "docker:dev:rmi": "docker-compose down --rmi all",
    "docker:dev:start": "npm run docker:dev:create-volume && docker-compose up -d --build",
    "docker:dev:stop": "docker-compose down",
    "lint:all": "lerna run --parallel lint",
    "postinstall": "lerna bootstrap",
    "start": "npm run docker:dev:start && lerna run --scope titus-backend dev:seed && lerna run --parallel start",
    "start:all": "npm run start",
    "stop:all": "npm run docker:dev:stop",
    "test": "lerna run --parallel test",
    "test:all": "npm run test",
    "lint:staged": "lerna run lint:staged",
    "test:related": "lerna run test:related"
  },
  "devDependencies": {
    "docsify-cli": "^4.4.0",
    "husky": "^1.3.1",
    "lerna": "^3.19.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint:staged && npm run test:related",
      "pre-push": "npm run lint:all && npm run test"
    }
  }
}

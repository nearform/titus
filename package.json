{
  "name": "titus",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "lint:all": "lerna run --parallel lint",
    "test:all": "lerna run test",
    "precommit": "lerna run --parallel format ; lerna run --parallel lint:fix",
    "prepush": "lerna run test",
    "postinstall": "lerna bootstrap",
    "start:kitchen-sink": "lerna run --scope titus-frontend* --stream start",
    "stop:kitchen-sink": "lerna run --scope titus-frontend* --stream stop",
    "lighthouse": "lerna run lighthouse"
  },
  "devDependencies": {
    "husky": "^0.14.3",
    "lerna": "^2.11.0"
  }
}

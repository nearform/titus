{
  "name": "titus",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap && lerna exec npm install",
    "clean": "lerna clean",
    "lint:all": "lerna run --parallel lint",
    "test:all": "lerna run test",
    "postinstall": "lerna bootstrap && lerna exec npm install",
    "start:showcase": "lerna run --scope titus-*-showcase --stream start",
    "stop:showcase": "lerna run --scope titus-*-showcase --stream stop",
    "lighthouse": "lerna run lighthouse",
    "create:env": "lerna run --scope titus-*-showcase create:env"
  },
  "devDependencies": {
    "lerna": "^2.11.0"
  }
}

{
  "name": "titus",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "clean:all": "lerna clean",
    "create:env": "lerna run --parallel create:env",
    "docker:dev:create:pg:volume": "docker volume create --name postgres_data -d local",
    "docker:dev:exec": "docker-compose exec api",
    "docker:dev:logs": "docker-compose logs -f",
    "docker:dev:migrate": "docker-compose exec api npm run migrate",
    "docker:dev:rmi": "docker-compose down --rmi all",
    "docker:dev:seed": "docker-compose exec api npm run dev:seed",
    "docker:dev:start": "npm run docker:dev:create:pg:volume && docker-compose up -d --build",
    "docker:dev:stop": "docker-compose down",
    "lint:all": "lerna run --parallel lint",
    "postinstall": "lerna bootstrap && lerna exec npm install",
    "start:all": "npm run docker:dev:start",
    "stop:all": "npm run docker:dev:stop",
    "test": "lerna run --parallel test",
    "test:all": "npm run test"
  },
  "devDependencies": {
    "lerna": "^2.11.0"
  }
}
